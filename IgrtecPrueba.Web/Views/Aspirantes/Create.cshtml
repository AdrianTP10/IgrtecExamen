@model IgrtecPrueba.Web.Models.Aspirante
@{
}

<style>
    .btn-create {
        background-color: #7241BC;
        border-color: #9d7bd1;
        color: #ffffff;
    }

        .btn-create:hover {
            background-color: #875dc6; /* Rojo más oscuro al pasar el ratón */
            border-color: #9d7bd1; /* Borde rojo más oscuro al pasar el ratón */
            color: #ffffff; /* Texto blanco */
        }
</style>
<div class="pagetitle">
    <h1>Registrar Aspirante</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Aspirantes</a></li>
            <li class="breadcrumb-item">Registrar Aspirante</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    @* <h5 class="card-title">Horizontal Form</h5> *@

                    <!-- Horizontal Form -->
                    <form asp-action="Create">
                        <div class="row mb-3">
                            <label asp-for="Nombre" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-10">
                                <input asp-for="Nombre" type="text" class="form-control" id="Nombre">
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Apellido" class="col-sm-2 col-form-label">Apellido</label>
                            <div class="col-sm-10">
                                <input asp-for="Apellido" type="text" class="form-control" id="Apellido">
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="CorreoElectronico" class="col-sm-2 col-form-label">Correo Electrónico</label>
                            <div class="col-sm-10">
                                <input asp-for="CorreoElectronico" type="email" class="form-control" id="CorreoElectronico">
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="NumTelefonico" class="col-sm-2 col-form-label">Numero Telefónico</label>
                            <div class="col-sm-10">
                                <input asp-for="NumTelefonico" type="number" class="form-control" id="NumTelefonico">
                                <span asp-validation-for="NumTelefonico" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="LugarNacimiento" class="col-sm-2 col-form-label">Lugar de Nacimiento</label>
                            <div class="col-sm-10">
                                <input asp-for="LugarNacimiento" type="text" class="form-control" id="LugarNacimiento">
                                <span asp-validation-for="LugarNacimiento" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-create">Registrar</button>
                        </div>
                    </form><!-- End Horizontal Form -->

                </div>
            </div>
        </div>
    </div>
</section>
